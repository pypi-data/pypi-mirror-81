{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(process)d - %(name)s - %(levelname)s: %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },

        "file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "elisa.log",
            "maxBytes": 10485760,
            "backupCount": 10,
            "encoding": "utf8"
        }
    },

    "loggers": {
        "main": {
            "level": "INFO",
            "handlers": ["console"],
            "propagate": 0
        },
        "BinarySystem": {
            "level": "WARNING",
            "handlers": ["console"],
            "propagate": 0
        },
        "observer.observer": {
            "level": "WARNING",
            "handlers": ["console"],
            "propagate": 0
        },
        "binary_system.system": {
            "level": "WARNING",
            "handlers": ["console"],
            "propagate": 0
        },
        "observer.mp": {
            "level": "WARNING",
            "handlers": ["console"],
            "propagate": 0
        },
        "binary_system.curves.lc": {
            "level": "WARNING",
            "handlers": ["console"],
            "propagate": 0
        },
        "analytics.binary_fit.plot": {
            "level": "DEBUG",
            "handlers": ["console"],
            "propagate": 0
        }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["console"]
    }
}
